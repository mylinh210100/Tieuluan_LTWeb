@model Tieuluan_LTWeb.Models.UserLogin
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="text-center">
    <h1>Log in</h1>
</div>
@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div>
        <div class="group">
            <h3>Username: </h3>
            @Html.TextBoxFor(model => model.Username, new { @class = "input" })
            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
        </div>
        <div class="group">
            <h3>Password: </h3>
            @Html.PasswordFor(model => model.Pass, new { @class = "input" })
            @Html.ValidationMessageFor(model => model.Pass, "", new { @class = "text-danger" })
        </div>
        <div class="group" style="margin: 5px;">
            <input type="submit" class="btn" value="Log In" style="border-color:#0026ff">
        </div>
    </div>
}
